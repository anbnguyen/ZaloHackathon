<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_padometer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nguye.exerciseassistant.Training.Pedometer"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:text="You are now"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/icn_walk" />

    <ImageView
        android:id="@+id/step"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/icn_step"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/step_counter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="0 step"
        android:textSize="30dp"
        android:layout_above="@+id/icn_distances"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageView
        android:id="@+id/icn_distances"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/icn_distances"
        android:layout_below="@+id/step"
        android:layout_alignLeft="@+id/step"
        android:layout_alignStart="@+id/step"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="0 meter"
        android:textSize="30dp"
        android:layout_above="@+id/icn_calories"
        android:layout_alignLeft="@+id/step_counter"
        android:layout_alignStart="@+id/step_counter" />

    <ImageView
        android:id="@+id/icn_calories"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/icn_distances"
        android:layout_alignStart="@+id/icn_distances"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:layout_below="@+id/icn_distances"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/icn_calories" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="0 cal"
        android:textSize="30dp"
        android:layout_above="@+id/imageView8"
        android:layout_alignLeft="@+id/distance"
        android:layout_alignStart="@+id/distance" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/icn_calories"
        android:layout_alignStart="@+id/icn_calories"
        android:layout_below="@+id/icn_calories"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/icn_clock" />

    <Chronometer
        android:id="@+id/chronometer3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignEnd="@+id/distance"
        android:layout_alignLeft="@+id/calories"
        android:layout_alignRight="@+id/distance"
        android:layout_alignStart="@+id/calories"
        android:textSize="30dp" />

    <Button
        android:id="@+id/saveData"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_alignEnd="@+id/chronometer3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/chronometer3"
        android:background="@drawable/btn_save"
        android:onClick="saveData" />

    <Button
        android:id="@+id/hrate_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icn_heartrate"
        android:onClick="heartRate" />
</RelativeLayout>
